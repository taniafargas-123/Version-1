#include <SoftwareSerial.h>
SoftwareSerial mySerial(10,11);

//intervalo
int nextMensaje;
int intervaloMensaje = 1000; //cada segundo envia
String mensajeRecibido = "";
void setup() {
  Serial.begin(9600);
  mySerial.begin(9600);
  nextMensaje = millis() + intervaloMensaje;
}

void loop() {
  if(mySerial.available() && Serial.available()){
    if(millis > nextMensaje){
      mySerial.print("Recibido || ");
      Serial.print("Enviado || ");
      nextMensaje = millis() + intervaloMensaje;
    }
    mensajeRecibido = mySerial.readString()
    Serial.println(mensajeRecibido);
  }
}
