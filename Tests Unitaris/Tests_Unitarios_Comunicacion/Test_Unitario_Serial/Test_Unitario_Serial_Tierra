// ====================================================================================================================
//                                             TEST DE COMUNICACION SERIAL
//                                Test de la comunicacion  Python -> Tierra -> Python 
// ====================================================================================================================

void setup() {
  Serial.begin(9600); 
  }
}

void loop() {
  if (Serial.available() > 0) {
    String mensaje = Serial.readStringUntil('\n');
    mensaje.trim();  // Quita saltos de lÃ­nea y espacios

    // Respuesta al mensaje recibido
    Serial.print("OK: ");
    Serial.println(mensaje);
  }
}
